rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      // PRIMARY DEFENSE: Admin status is now physically tied to the architect's verified email.
      return isAuthenticated() && request.auth.token.email == 'shengliang.song.ai@gmail.com';
    }

    // ----------------------------------------------------------------------
    // SIGNET IDENTITY REGISTRY (TKS)
    // ----------------------------------------------------------------------
    match /identities/{anchorId} {
      // Registry is public for verification
      allow read: if true;
      
      // Allow creation of new unique identities
      // Constraints: 10-256 chars (accounts for 'signetai.io:' prefix)
      allow create: if anchorId.size() >= 10 && anchorId.size() <= 256;
      
      // Allow owners to update their own registry entry
      allow update: if isAdmin() || (isAuthenticated() && resource.data.ownerUid == request.auth.uid);
      
      // Only admins can purge from the global registry
      allow delete: if isAdmin();
    }

    // ----------------------------------------------------------------------
    // USERS & IDENTITY
    // ----------------------------------------------------------------------
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin(); 
      allow create: if isOwner(userId);
      allow update: if isAdmin() || isOwner(userId);
    }

    // ----------------------------------------------------------------------
    // NEURAL CACHE & LEDGERS
    // ----------------------------------------------------------------------
    match /neural_audio_ledger/{docId} {
      allow read: if true; 
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    match /bible_ledger/{docId} {
      allow read: if true; 
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // ----------------------------------------------------------------------
    // Global Default
    // ----------------------------------------------------------------------
    match /{document=**} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}