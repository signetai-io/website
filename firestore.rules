rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- AUTH HELPERS ---
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserEmail() {
      return request.auth.token.get('email', '').lower();
    }

    function getAuthUid() {
      return request.auth.uid;
    }

    function hasValidAnchorId(anchorId) {
      return anchorId.size() >= 5 && anchorId.size() <= 256;
    }

    function ownerUidMatchesRequest() {
      return request.resource.data.get('ownerUid', '') == getAuthUid();
    }

    function isAdmin() {
      return isAuthenticated() && (
        getUserEmail() == 'shengliang.song.ai@gmail.com' ||
        getUserEmail() == 'shengliang.song@gmail.com'
      );
    }

    // --- IDENTITY REGISTRY (TKS) ---
    match /identities/{anchorId} {
      allow read: if true;
      
      // Allow creation by authenticated provider-backed user who sets ownerUid to self.
      allow create: if isAuthenticated()
                    && hasValidAnchorId(anchorId)
                    && ownerUidMatchesRequest();
      
      // Allow update if:
      // 1. User is an Admin
      // 2. OR User is the verified owner (matching UID or matching lowercase Email)
      // 3. OR The document exists but has no ownerUid/Email (orphaned)
      allow update: if isAdmin() || (
        isAuthenticated() && (
          resource.data.get('ownerUid', '') == getAuthUid() ||
          resource.data.get('ownerEmail', '').lower() == getUserEmail() ||
          resource.data.get('ownerUid', '') == '' ||
          resource.data.get('ownerUid', '') == 'ANONYMOUS'
        ) && (
          ownerUidMatchesRequest()
        )
      );
      
      allow delete: if isAdmin();
    }

    match /users/{userId} {
      allow read, write: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
    }

    match /{document=**} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}
