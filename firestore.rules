rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuthenticated() && (
        request.auth.token.email == 'shengliang.song.ai@gmail.com' || 
        request.auth.token.email == 'shenglaing.song@gmail.com' ||
        request.auth.token.email == 'shengliang.song@gmail.com'
      );
    }

    // Helper to safely get ownerUid or default to ANONYMOUS
    function getExistingOwner() {
      return resource.data.get('ownerUid', 'ANONYMOUS');
    }

    // ----------------------------------------------------------------------
    // SIGNET IDENTITY REGISTRY (TKS)
    // ----------------------------------------------------------------------
    match /identities/{anchorId} {
      allow read: if true;
      
      // Allow creation if the ID is within range (10-256 chars)
      // Must be authenticated to save to global registry
      allow create: if anchorId.size() >= 10 && anchorId.size() <= 256 
                    && isAuthenticated() 
                    && request.resource.data.ownerUid == request.auth.uid;
      
      // Allow update if:
      // 1. User is an admin
      // 2. User is authenticated and the record is currently unowned or owned by them
      allow update: if isAdmin() 
                    || (isAuthenticated() && (
                        getExistingOwner() == 'ANONYMOUS' || 
                        getExistingOwner() == request.auth.uid ||
                        getExistingOwner() == null ||
                        getExistingOwner() == ""
                    ));
      
      allow delete: if isAdmin();
    }

    // ----------------------------------------------------------------------
    // USERS & IDENTITY
    // ----------------------------------------------------------------------
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin(); 
      allow create: if isOwner(userId);
      allow update: if isAdmin() || isOwner(userId);
    }

    // ----------------------------------------------------------------------
    // Global Default (Strict)
    // ----------------------------------------------------------------------
    match /{document=**} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}