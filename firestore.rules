rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      // STRICT LOCKDOWN: Only the primary architect email is granted administrative access.
      // Group-based checks are disabled to prevent database-level privilege escalation.
      return isAuthenticated() && request.auth.token.email == 'shengliang.song.ai@gmail.com';
    }

    // ----------------------------------------------------------------------
    // SIGNET IDENTITY REGISTRY (TKS)
    // ----------------------------------------------------------------------
    match /identities/{anchorId} {
      allow read: if true;
      
      // First-to-Claim (Public Demo Mode):
      // Relying on GCP Referrer Whitelisting for primary security.
      allow create: if !exists(/databases/$(database)/documents/identities/$(anchorId))
                    && anchorId.size() >= 20;
      
      allow update, delete: if isAdmin();
    }

    // ----------------------------------------------------------------------
    // USERS & IDENTITY
    // ----------------------------------------------------------------------
    match /users/{userId} {
      allow read: if isAuthenticated(); 
      allow create: if isOwner(userId) && !(request.resource.data.keys().hasAny(['groups']));
      allow update: if isAdmin() || (isOwner(userId) && !(request.resource.data.diff(resource.data).affectedKeys().hasAny(['groups'])));
    }

    // ----------------------------------------------------------------------
    // NEURAL CACHE & LEDGERS (Append-Only for Users)
    // ----------------------------------------------------------------------
    match /neural_audio_ledger/{docId} {
      allow read: if true; 
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    match /lecture_cache/{docId} {
      allow read: if true; 
      allow write: if isAdmin(); 
    }

    match /bible_ledger/{docId} {
      allow read: if true; 
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // ----------------------------------------------------------------------
    // TRANSACTIONS & ESCROW
    // ----------------------------------------------------------------------
    match /invitations/{inviteId} { 
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated(); 
    }
    
    match /coin_transactions/{txId} { 
      allow read: if isAuthenticated() && (resource.data.uid == request.auth.uid || isAdmin()); 
      allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid; 
      allow update, delete: if isAdmin();
    }

    // ----------------------------------------------------------------------
    // COMMUNITY & CONTENT
    // ----------------------------------------------------------------------
    match /blogs/{blogId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /chat_channels/{channelId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
      match /messages/{msgId} { 
        allow read: if isAuthenticated();
        allow create: if isAuthenticated() && request.resource.data.senderId == request.auth.uid;
        allow update, delete: if isAdmin() || (isAuthenticated() && resource.data.senderId == request.auth.uid);
      }
    }
    
    // ----------------------------------------------------------------------
    // Global Default - Restrict general paths to Admins
    // ----------------------------------------------------------------------
    match /{document=**} {
      allow read: if isAuthenticated() || isAdmin();
      allow write: if isAdmin();
    }
  }
}