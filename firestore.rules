rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuthenticated() && 
             request.auth.token.get('email', '').lower() in [
               'shengliang.song.ai@gmail.com',
               'shengliang.song@gmail.com'
             ];
    }

    // Safely retrieve existing ownership data
    function getExistingOwnerUid() {
      return resource.data.get('ownerUid', '');
    }
    
    function getExistingOwnerEmail() {
      return resource.data.get('ownerEmail', '').lower();
    }

    // ----------------------------------------------------------------------
    // SIGNET IDENTITY REGISTRY (TKS)
    // ----------------------------------------------------------------------
    match /identities/{anchorId} {
      allow read: if true;
      
      // Allow creation for any authenticated user who sets themselves as owner
      allow create: if isAuthenticated() 
                    && anchorId.size() >= 5 
                    && anchorId.size() <= 256 
                    && request.resource.data.ownerUid == request.auth.uid;
      
      // Allow update if:
      // 1. User is an Admin
      // 2. Identity is unclaimed (ownerUid is empty or 'ANONYMOUS')
      // 3. Current authenticated user is the existing owner (matching UID or Email)
      allow update: if isAdmin() 
                    || (isAuthenticated() && (
                        getExistingOwnerUid() == '' || 
                        getExistingOwnerUid() == 'ANONYMOUS' ||
                        getExistingOwnerUid() == request.auth.uid ||
                        getExistingOwnerEmail() == request.auth.token.get('email', 'NONE').lower()
                    ) && (
                        request.resource.data.ownerUid == request.auth.uid
                    ));
      
      allow delete: if isAdmin();
    }

    // ----------------------------------------------------------------------
    // USERS & PROFILE
    // ----------------------------------------------------------------------
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin(); 
      allow create: if isOwner(userId);
      allow update: if isAdmin() || isOwner(userId);
    }

    match /{document=**} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}