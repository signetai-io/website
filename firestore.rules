rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuthenticated() && 
             request.auth.token.get('email', '').lower() in [
               'shengliang.song.ai@gmail.com',
               'shengliang.song@gmail.com'
             ];
    }

    // Safely retrieves existing owner info
    function getExistingOwnerUid() {
      return resource.data.get('ownerUid', 'ANONYMOUS');
    }
    
    function getExistingOwnerEmail() {
      return resource.data.get('ownerEmail', 'NONE');
    }

    // ----------------------------------------------------------------------
    // SIGNET IDENTITY REGISTRY (TKS)
    // ----------------------------------------------------------------------
    match /identities/{anchorId} {
      // Identity lookups are always public
      allow read: if true;
      
      // Creation requirements:
      // 1. Authenticated
      // 2. ID length constraints
      // 3. User must set themselves as owner
      allow create: if isAuthenticated() 
                    && anchorId.size() >= 10 
                    && anchorId.size() <= 256 
                    && request.resource.data.ownerUid == request.auth.uid;
      
      // Update requirements:
      // 1. Admin bypass
      // 2. OR User is authenticated AND:
      //    a. They already own it (UID or Email match)
      //    b. OR it's unclaimed (ANONYMOUS, null, or empty)
      //    c. AND they are setting themselves as the new owner (ownerUid must match auth.uid)
      allow update: if isAdmin() 
                    || (isAuthenticated() && (
                        getExistingOwnerUid() == 'ANONYMOUS' || 
                        getExistingOwnerUid() == null ||
                        getExistingOwnerUid() == "" ||
                        getExistingOwnerUid() == request.auth.uid ||
                        getExistingOwnerEmail().lower() == request.auth.token.get('email', 'NONE').lower()
                    ) && (
                        request.resource.data.ownerUid == request.auth.uid
                    ));
      
      allow delete: if isAdmin();
    }

    // ----------------------------------------------------------------------
    // USERS & PROFILE (Private Sandboxes)
    // ----------------------------------------------------------------------
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin(); 
      allow create: if isOwner(userId);
      allow update: if isAdmin() || isOwner(userId);
    }

    // ----------------------------------------------------------------------
    // Global Default (Strict Lockdown)
    // ----------------------------------------------------------------------
    match /{document=**} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}